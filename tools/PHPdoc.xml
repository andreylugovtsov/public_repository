<toolSet name="PHPdoc">
  <tool name="generate" description="API documentation generator" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="C:\PHP\phpdoc.bat" />
      <option name="PARAMETERS" value="-d $FileDir$ -t $ProjectFileDir$\phpdoc\ --title $ProjectName$ --force" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
</toolSet>